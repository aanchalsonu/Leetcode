        // {
        //     mp[s[i]]++;
        // }

        // for(int i=0;i<t.length();i++)
        // {
        //     mp1[t[i]]++;
        // }
        // bool flag = true;
        // for(auto i : mp1)
        // {
        //     if(i.second != mp[s[i]])
        //     flag = false;
        // }

        // return flag;
    }
};
